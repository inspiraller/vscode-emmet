{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "lib": ["es2018", "es2015", "es5", "es6", "dom", "esnext.asynciterable"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "jsx": "react",
    "pretty": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "paths": {
      "src/*": ["src/*"],
    },
    "watch": true,
    "strict": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules/**/*"] // spec.ts fix in tsconfi.spec.json
}
